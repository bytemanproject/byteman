##############################################################################
#
# log a message to indicate that triggerMethod was called and fired the rule

RULE test throwable value binding in catches
CLASS org.jboss.byteman.tests.misc.TestCatchBinding
METHOD triggerMethod(int)
HELPER org.jboss.byteman.tests.helpers.Default
AT THROW ALL
BIND test = $0;
     catchBinding = $^
IF TRUE
DO test.log("triggerMethod : triggered with " + catchBinding.getMessage())
ENDRULE
